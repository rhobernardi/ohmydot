#!/bin/bash

alias src="vim ~/.zshrc && omz reload"
alias vrc="vim ~/.vimrc"
alias i3rc="vim ~/.config/i3/config"
alias i3rst="i3-msg restart"
alias explorer="thunar"
alias l='ls -lah'
alias l.='ls -d .* --color=auto'
alias la='ls -lAh'
alias ll='ls -lh'
alias ls='ls --color=tty'
alias lsa='ls -lah'
